<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:background="@color/lightGrey"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/name_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_light"
        android:paddingStart="65dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="Teacher name"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_teacher"
        android:layout_marginStart="50dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="65dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Major:"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/teacher_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="140dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="major in xyz"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/teacher_major"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="25dp"
            android:background="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teacher_major"
            android:paddingStart="53dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Subject:"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/teacher_subject1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teacher_major"
            android:paddingStart="140dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="subject 1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/teacher_subject2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teacher_subject1"
            android:paddingStart="140dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="subject 2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/teacher_subject3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teacher_subject2"
            android:layout_marginBottom="10dp"
            android:paddingStart="140dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="subject 3"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_marginStart="50dp"
        android:background="#ADD8E6">

        <TextView
            android:id="@+id/price_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="₹800 - ₹1000"
            android:textColor="#00008B"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/price_range"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Price:"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_teacher"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/image"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />
</RelativeLayout>